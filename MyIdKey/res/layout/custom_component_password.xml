<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/custom_component_free_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dp"
              android:weightSum="2">

    <com.arkami.myidkey.common.CustomFontTextView
            style="@style/Roboto"
            android:id="@+id/custom_component_password_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="write name here.."
            android:lines="1"
            android:layout_weight="1"
            android:textSize="20sp"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:weightSum="50">
    <EditText
            android:id="@+id/custom_component_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="true"
            android:background="@drawable/edittext_selector"
            android:enabled="true"
            android:text=""
            android:layout_weight="50"
            />
    <Button
            android:id="@+id/custom_component_password_generate"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:background="@drawable/button_shape_blue_small"
            android:text="@string/generate"
            android:textColor="@android:color/white"
            android:ems="3"
            android:textSize="14sp"


            android:layout_alignBaseline="@+id/password"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>