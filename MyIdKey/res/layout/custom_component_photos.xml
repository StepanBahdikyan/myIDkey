<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_component_photos"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:visibility="visible" >

    <com.arkami.myidkey.common.CustomFontTextView
            style="@style/Roboto"
        android:id="@+id/custom_component_photos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photos" />

    <LinearLayout
        android:id="@+id/custom_component_photos_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_component_photos_label"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/custom_component_photos_label"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>