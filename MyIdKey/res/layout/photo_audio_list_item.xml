<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/photo_audio_list_item_thumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="3dp" />

    <ImageButton
        android:id="@+id/photo_audio_list_item_close_button"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/photo_audio_list_item_thumb"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/delete_x" />

    <com.arkami.myidkey.common.CustomFontTextView
            style="@style/Roboto"
        android:id="@+id/photo_audio_list_item_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo_audio_list_item_close_button"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/photo_audio_list_item_close_button"
        android:layout_toRightOf="@+id/photo_audio_list_item_thumb"
        android:singleLine="true"
        android:text="file_name"
        android:textSize="15sp" />

    <com.arkami.myidkey.common.CustomFontTextView
            style="@style/Roboto"
        android:id="@+id/photo_audio_list_item_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photo_audio_list_item_file_name"
        android:layout_alignRight="@+id/photo_audio_list_item_file_name"
        android:layout_below="@+id/photo_audio_list_item_file_name"
        android:layout_marginBottom="1dp"
        android:text="file_size"
        android:textColor="@color/app_blue"
        android:textSize="12sp" />

</RelativeLayout>