<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abs__item_background_holo_light"
        >

    <ImageButton
            android:id="@+id/action_bar_view_image_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/abs__item_background_holo_light"
            android:gravity="center|center_vertical"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit_icon"
            android:focusable="false"/>

    <ImageButton
            android:id="@+id/action_bar_view_image_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/action_bar_view_image_share"
            android:background="@drawable/abs__item_background_holo_light"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trashcan"/>

    <ImageButton
            android:id="@+id/action_bar_view_image_share"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/action_bar_view_image_edit"
            android:background="@drawable/abs__item_background_holo_light"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/share"/>

</RelativeLayout>