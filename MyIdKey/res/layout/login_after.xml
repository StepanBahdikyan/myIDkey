<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:id="@+id/myListViewBackground"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:background="@drawable/thumb_background"
            android:isScrollContainer="true"/>

    <RelativeLayout
            android:id="@+id/logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"

            android:background="@drawable/shadow_down">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#f9f9f9">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/logo_transparent_blue"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/login_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"

            android:layout_marginBottom="0dp">

    </LinearLayout>
    <Button
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_blue"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/login_buttons"
            android:layout_centerVertical="true" android:layout_alignRight="@+id/login_buttons"/>
    <EditText
            android:id="@+id/passphrase"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="8"
            style="@style/Roboto"
            android:background="@drawable/edittext_selector"
            android:hint="@string/enter_passphrase"
            android:textSize="20sp" android:layout_alignLeft="@+id/login_buttons"
            android:layout_above="@+id/login_button" android:layout_alignRight="@+id/login_buttons"/>

	<LinearLayout
            android:id="@+id/welcome_bottombar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_blue" >
        </LinearLayout>
</RelativeLayout>