<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:padding="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/tag_item_background"
        android:orientation="horizontal" >

        <com.arkami.myidkey.common.CustomFontTextView
                style="@style/Roboto"
            android:id="@+id/tag_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="1dp"
            android:text="@string/tags"
            android:textColor="@android:color/white" />



        <ImageView
            android:id="@+id/tag_item_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tag_item_name"
            android:layout_alignTop="@+id/tag_item_name"
            android:layout_toRightOf="@+id/tag_item_name"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </RelativeLayout>

</LinearLayout>