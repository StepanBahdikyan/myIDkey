<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abs__item_background_holo_light"
        >
    <ToggleButton
            android:id="@+id/actionbar_key_card_view_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="right"
            android:padding="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textOff=""
            android:textOn=""
            android:button="@android:color/transparent"
            android:background="@drawable/favorite_selector"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/actionbar_key_card_view_share"
            android:layout_alignParentTop="true"/>



    <ImageButton
            android:id="@+id/actionbar_key_card_view_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/abs__item_background_holo_light"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/share"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/actionbar_key_card_view_edit"

            />

    <ImageButton
            android:id="@+id/actionbar_key_card_view_edit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/abs__item_background_holo_light"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/edit_icon"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"

            android:layout_alignBottom="@+id/actionbar_key_card_view_share"/>


</RelativeLayout>